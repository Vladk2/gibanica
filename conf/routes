# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /login/                     controllers.Login.submit()
POST    /register/                   controllers.Register.submit()
GET     /logout/                     controllers.Login.logout()
GET     /profile/                    controllers.Profile.profile()
POST    /edit_profile/               controllers.Profile.editProfile()
GET     /restaurants/                controllers.Restaurants.restaurants()
POST    /addRestaurant              controllers.Restaurants.addRestaurant()
POST    /addRestaurantManager       controllers.Restaurants.addRestaurantManager()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

