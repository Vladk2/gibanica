# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                            controllers.Application.index
POST        /login                       controllers.Login.submit()
POST        /register                    controllers.Register.submit()
GET         /logout                      controllers.Login.logout()
GET         /profile                     controllers.Profile.profile()
POST        /edit_profile                controllers.Profile.editProfile()
GET         /friends                     controllers.Friends.friendsPage()
POST        /friendsSearch               controllers.Friends.friendsSearchApi()
GET         /friendsGetAll               controllers.Friends.friendsGetAllApi()
GET         /restaurants                 controllers.Restaurants.restaurants()
GET         /visits                      controllers.Ratings.visits()
GET         /newOrder                    controllers.Orders.newOrder()
POST        /editOrder                   controllers.Orders.editOrder()
GET         /requests                    controllers.Bids.requests()
POST        /addRestaurantManager        controllers.Restaurants.addRestaurantManager()
POST        /addSystemManager            controllers.Restaurants.addSystemManager()
POST        /addBidder                   controllers.Restaurants.addBidder()
POST        /addEmployee                 controllers.Restaurants.addEmployee()
POST        /editRestaurant              controllers.Restaurants.editRestaurant()
POST        /verifyPass                  controllers.Login.verifyPass()
POST        /addVictual                  controllers.Restaurants.addVictualAJAX()
POST        /addDrink                    controllers.Restaurants.addDrinkAJAX()
POST        /addRestInfo                 controllers.Restaurants.addRestInfoAJAX()
POST        /finishAddRest               controllers.Restaurants.saveSeatConf()
POST        /addSeatSection              controllers.Restaurants.addSeatSection()
POST        /editVictual                 controllers.Restaurants.editVictualAJAX()
GET         /proceed_with_order          controllers.Orders.proceed()
POST        /rateRestaurant              controllers.Ratings.rateRestaurantAJAX()
POST        /rateFood                    controllers.Ratings.rateFoodAJAX()
POST        /rateService                 controllers.Ratings.rateServiceAJAX()
POST        /createOrder                 controllers.Orders.createOrderAJAX()
POST        /editDrink                   controllers.Restaurants.editDrinkAJAX()
POST        /editSeatSection             controllers.Restaurants.editSeatSection()
POST        /finishEditRest              controllers.Restaurants.editSeatConf()
GET         /manageMenuAndSeating        controllers.Restaurants.AddMenuAndSeating()
GET         /editMenuAndSeating          controllers.Restaurants.EditMenuAndSeating()
GET         /restAddedFlash              controllers.Restaurants.restAddedFlash()
GET         /restEditedFlash             controllers.Restaurants.restEditedFlash()
POST         /removeSector               controllers.Restaurants.removeSector()
POST        /addRequest                 controllers.Restaurants.addRequest()
POST        /addGroceries               controllers.Restaurants.addGroceries()
POST         /addWorkTimee                controllers.Restaurants.addWorkTime()
POST         /removeVictualOrDrink       controllers.Restaurants.removeVictualOrDrink()
GET         /jsRoutes                    controllers.Application.jsRoutes()
GET         /verify                        controllers.Register.verify(id: String ?= "default")
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                controllers.Assets.at(path="/public", file)
